#!/bin/sh

env_dir=$3
current=$(pwd)

whitelist_regex=${2:-''}
blacklist_regex=${3:-'^(PATH|GIT_DIR|CPATH|CPPATH|LD_PRELOAD|LIBRARY_PATH)$'}
if [ -d "$env_dir" ]; then
  for e in $(ls $env_dir); do
    export "$e=$(cat $env_dir/$e)";
  done
fi

build_dir=$1

if [ -d "bin" ]; then
    cp -rf $current/bin $build_dir/
fi

git clone $PROJECT_GIT_URL $current/$PROJECT

cd $current/$PROJECT
git checkout $DEPLOY_BRANCH
mv $APP_NAME/* $build_dir/

mv $current/wsgi.py $build_dir/$APP_NAME/

